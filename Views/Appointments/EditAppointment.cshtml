@model Csharp3_A3.ViewModels.EditAppointmentViewModel
@{
}
<h2>Edit Appointment</h2>

<div>
	<label>Patient: </label>
	<input class="form-control" value="@Model.Appointment.Patient.Name" readonly />
</div>

<div>
	<label>Staff: </label>
	<input class="form-control" value="@Model.Appointment.Staff.Name" readonly />
</div>

<form method="post" asp-controller="Appointments" asp-action="EditAppointment">
	<div class="form-group">
		<label asp-for="Appointment.Reason"></label>
		<input asp-for="Appointment.Reason" class="form-control" />
		<span asp-validation-for="Appointment.Reason" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Appointment.DateOfAppointment"></label>
		<input asp-for="Appointment.DateOfAppointment" type="datetime-local" class="form-control" />
		<span asp-validation-for="Appointment.DateOfAppointment" class="text-danger"></span>
	</div>

	@if (User.IsInRole("Staff"))
	{
		<div class="form-group">
			<label asp-for="Appointment.Status"></label>
			<select asp-for="Appointment.Status" class="form-select" asp-items="Model.StatusList"></select>
			<span asp-validation-for="Appointment.Status" class="text-danger"></span>
		</div>
	}
	@if (User.IsInRole("Patient"))
	{
		<div class="form-group">
			<label asp-for="Appointment.Status"></label>
			<input asp-for="Appointment.Status" class="form-text" contenteditable="false" placeholder="Appointment.Status" />
		</div>
	}

	<input type="hidden" asp-for="Appointment.Id" />
	<input type="hidden" asp-for="Appointment.PatientId" />
	<input type="hidden" asp-for="Appointment.StaffId" />

	<button type="submit" class="btn btn-primary mt-2">Save</button>
	<a asp-controller="Appointments" asp-action="Index" class="btn btn-outline-primary mt-2">Cancel</a>
</form>