@using Csharp3_A3.Models;
@using Csharp3_A3.Helpers
@model List<NewsItem>
@{
}

<div class="news-section p-3 bg-info bg-opacity-25 border rounded" alt="News section" aria-label="News section">
    <div class="row">
        <div class="col-8">
            <h4>News updates</h4>
        </div>

        <dic class="col-4">
            <a asp-controller="News" asp-action="NewsManagement" class="btn btn-sm btn-outline-primary">Manage</a>
        </dic>
    </div>

    @foreach (var item in Model)
    {
        <a asp-controller="News" asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-black">
            <div class="card mb-2 bg-opacity-25">
                <img src="~/@item.ImagePath" class="card-img-top img-fluid opacity-75" />
                <div class="card-body">
                    <h6>@StringHelpers.Truncate(item.Title, 50)</h6>
                    <p>@StringHelpers.Truncate(item.Content, 100)</p>
                </div>
            </div>
        </a>
    }
</div>