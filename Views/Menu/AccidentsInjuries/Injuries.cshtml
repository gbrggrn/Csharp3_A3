@page
@model Csharp3_A1.Pages.Menu.AccidentsInjuries.InjuriesModel
@{
	ViewData["Title"] = "Injuries";
}
<div class="text-left">

    <div class="container mt-2">
        <div class="row">
            <h2 class="m-2">Injuries</h2>
        </div>

        <div class="row mt-2">
            <!-- Content -->
            <div class="col-md-6">
                <div class="card m-2 w-100">
                    <img src="~/images/content/injuries_img1.jpg" class="card-img-top img-fluid opacity-75" />
                    <div class="card-body">
                        <h4>Injuries can happen out of nowhere</h4>
                        <p>Make sure you have medical insurance!</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card m-2 w-100">
                    <img src="~/images/content/injuries_img2.jpg" class="card-img-top img-fluid opacity-75" />
                    <div class="card-body">
                        <h4>We can help you</h4>
                        <p>If you are clumsy enough to cause - or unlucky enough to end up with an injury - we can fix you up!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>