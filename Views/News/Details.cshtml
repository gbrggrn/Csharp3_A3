@using Csharp3_A3.Helpers
@model Csharp3_A3.Models.NewsItem
@{
}
<div class="text-left">

    <div class="container mt-2">
        <div class="row">
            <h2 class="m-2">Details</h2>
        </div>

        @if (Model != null)
        {
            <a href="@Model.Url" target="_blank" rel="noopener noreferrer" class="text-decoration-none text-dark">
                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="card m-2 w-100">
                            <img src="~/@Model.ImagePath" class="card-img-top img-fluid opacity-75" />
                            <div class="card-body">
                                <h4>@Model.Title</h4>
                                <p>@Model.Content</p>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        }
        else
        {
            <div class="row mt-2">
                <div class="col">
                    <p>Something went wrong - no details for this news item</p>
                </div>
            </div>
        }
    </div>
</div>