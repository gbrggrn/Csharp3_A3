@model Csharp3_A3.Models.NewsItem

<h2>Edit News Item</h2>

<form method="post" asp-controller="News" asp-action="EditNews">
	<div class="form-group row mb-2">
		<label asp-for="Title" class="col-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="Title" class="form-control"/>
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row mb-2">
		<label asp-for="Content" class="col-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="Content" class="form-control" />
			<span asp-validation-for="Content" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row mb-2">
		<label asp-for="ImagePath" class="col-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="ImagePath" class="form-control" />
			<span asp-validation-for="ImagePath" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row mb-2">
		<label asp-for="Url" class="col-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="Url" class="form-control" />
			<span asp-validation-for="Url" class="text-danger"></span>
		</div>
	</div>

	<input type="hidden" asp-for="Id" />

	<button type="submit" class="btn btn-primary mb-2 mt-2">Save</button>
	<a asp-controller="News" asp-action="NewsManagement" class="btn btn-outline-primary">Cancel</a>
</form>